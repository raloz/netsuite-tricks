{
  "manifest_version": 3,
  "name": "NetSuite Tricks",
  "version": "1.0.0",
  "description": "A Chrome extension to increase your NetSuite experience",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["https://*.app.netsuite.com/app/accounting/transactions/*.nl?id=*&whence=&e=T"]
    }
  ]
}
